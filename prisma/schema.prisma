generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String      @id @default(uuid())
  email        String      @unique
  password     String
  firstName    String
  lastName     String
  phone        String
  role         Role        @default(SERVER)
  status       UserStatus  @default(ACTIVE)
  restaurantId String?
  address      Address?
  createdAt    DateTime    @default(now())
  updatedAt    DateTime    @updatedAt
  lastLogin    DateTime?
  
  restaurant Restaurant? @relation(fields: [restaurantId], references: [id])
  orders     Order[]     @relation("ServerOrders")
  
  @@map("users")
}

model Address {
  id             String  @id @default(uuid())
  userId         String  @unique
  street         String
  doorNumber     String
  doorColor      String?
  sector         String
  neighborhood   String
  city           String
  postalCode     String
  arrondissement String
  latitude       Float
  longitude      Float
  
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@map("addresses")
}

model Restaurant {
  id                  String             @id @default(uuid())
  name                String
  address             String
  city                String
  country             String
  phone               String
  email               String             @unique
  logo                String?
  status              RestaurantStatus   @default(ACTIVE)
  subscriptionPlan    SubscriptionPlan   @default(FREE)
  subscriptionEndDate DateTime
  createdAt           DateTime           @default(now())
  updatedAt           DateTime           @updatedAt
  
  users      User[]
  menuItems  MenuItem[]
  tables     Table[]
  orders     Order[]
  
  @@map("restaurants")
}

model MenuItem {
  id              String   @id @default(uuid())
  restaurantId    String
  name            String
  description     String
  price           Float
  category        Category
  imageUrl        String?
  isAvailable     Boolean  @default(true)
  preparationTime Int      @default(15)
  rating          Float    @default(4.5)
  isPopular       Boolean  @default(false)
  alcoholContent  Float?
  calories        Int?
  allergens       String[]
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  
  restaurant Restaurant  @relation(fields: [restaurantId], references: [id])
  orderItems OrderItem[]
  
  @@map("menu_items")
}

model Table {
  id             String      @id @default(uuid())
  restaurantId   String
  number         String
  capacity       Int
  status         TableStatus @default(AVAILABLE)
  currentOrderId String?     @unique
  serverName     String?
  createdAt      DateTime    @default(now())
  updatedAt      DateTime    @updatedAt
  
  restaurant Restaurant @relation(fields: [restaurantId], references: [id])
  orders     Order[]
  
  @@unique([restaurantId, number])
  @@map("tables")
}

model Order {
  id          String      @id @default(uuid())
  restaurantId String
  tableId     String
  tableNumber String
  serverId    String
  serverName  String
  status      OrderStatus @default(PENDING)
  totalAmount Float
  notes       String?
  createdAt   DateTime    @default(now())
  readyAt     DateTime?
  deliveredAt DateTime?
  updatedAt   DateTime    @updatedAt
  
  restaurant Restaurant  @relation(fields: [restaurantId], references: [id])
  table      Table       @relation(fields: [tableId], references: [id])
  server     User        @relation("ServerOrders", fields: [serverId], references: [id])
  items      OrderItem[]
  
  @@map("orders")
}

model OrderItem {
  id        String   @id @default(uuid())
  orderId   String
  menuItemId String
  quantity  Int
  price     Float
  comment   String?
  createdAt DateTime @default(now())
  
  order    Order    @relation(fields: [orderId], references: [id], onDelete: Cascade)
  menuItem MenuItem @relation(fields: [menuItemId], references: [id])
  
  @@map("order_items")
}

enum Role {
  TECHNICIAN
  ADMIN
  SERVER
  CLIENT
}

enum UserStatus {
  ACTIVE
  INACTIVE
}

enum RestaurantStatus {
  ACTIVE
  INACTIVE
  SUSPENDED
}

enum SubscriptionPlan {
  FREE
  BASIC
  PREMIUM
  ENTERPRISE
}

enum Category {
  FOOD
  DRINK
  DESSERT
}

enum TableStatus {
  AVAILABLE
  OCCUPIED
  RESERVED
}

enum OrderStatus {
  PENDING
  IN_PREPARATION
  READY
  DELIVERED
  CANCELLED
}
